{
    "name": "dilli-daaru",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbo",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "db:pull": "dotenv -e .env.local prisma db pull",
        "db:push": "dotenv -e .env.local prisma db push",
        "db:seed": "dotenv -e .env.local prisma db seed",
        "db:studio": "dotenv -e .env.local prisma studio",
        "db:generate": "dotenv -e .env.local prisma generate",
        "db:reset:dev": "dotenv -e .env.local prisma migrate reset",
        "db:migrate:dev": "dotenv -e .env.local prisma migrate dev",
        "db:pull:prod": "dotenv -e .env.prod.local prisma db pull",
        "db:push:prod": "dotenv -e .env.prod.local prisma db push",
        "db:seed:prod": "dotenv -e .env.prod.local prisma db seed",
        "db:studio:prod": "dotenv -e .env.prod.local prisma studio",
        "db:reset:prod": "dotenv -e .env.prod.local prisma migrate reset",
        "vercel-build": "prisma generate && prisma migrate deploy && next build",
        "prepare": "husky install"
    },
    "dependencies": {
        "@googlemaps/google-maps-services-js": "^3.3.34",
        "@prisma/client": "5.0.0",
        "@sentry/nextjs": "^7.60.1",
        "@types/node": "18.16.1",
        "@types/react": "18.2.15",
        "@types/react-dom": "18.2.7",
        "@vercel/analytics": "^1.0.1",
        "autoprefixer": "10.4.14",
        "dayjs": "^1.11.9",
        "eslint": "8.45.0",
        "eslint-config-next": "13.4.12",
        "next": "13.4.12",
        "postcss": "8.4.27",
        "radash": "^11.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-loading-skeleton": "^3.3.1",
        "short-uuid": "^4.2.2",
        "tailwindcss": "3.3.3",
        "typescript": "5.1.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.7",
        "@commitlint/config-conventional": "^17.6.7",
        "dotenv-cli": "^7.2.1",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-tailwindcss": "^3.13.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.3",
        "prettier": "^3.0.0",
        "prisma": "^5.0.0",
        "prisma-docs-generator": "^0.8.0",
        "sass": "^1.64.1",
        "stylelint": "^15.10.2",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-standard-scss": "^10.0.0",
        "stylelint-config-tailwindcss": "^0.0.7",
        "ts-node": "^10.9.1"
    },
    "prisma": {
        "seed": "ts-node-esm prisma/seed.mts"
    },
    "stylelint": {
        "extends": [
            "stylelint-config-standard-scss",
            "stylelint-config-tailwindcss/scss"
        ],
        "rules": {
            "selector-class-pattern": null
        },
        "ignoreFiles": [
            "prisma/docs/**"
        ]
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "prettier"
        ],
        "plugins": [
            "simple-import-sort"
        ],
        "rules": {
            "simple-import-sort/imports": "error",
            "simple-import-sort/exports": "error"
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}

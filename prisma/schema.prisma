generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema", "fullTextSearch", "postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  schemas    = ["public"]
  extensions = [postgis(version: "3.3.2"), uuidOssp(map: "uuid-ossp"), pgcrypto()]
}

enum ProductType {
  IMPORTED
  INDIAN
  COUNTRY

  @@schema("public")
}

enum ProductCategory {
  BEER
  WINE
  CIDER
  ALCOPOP
  WHISKEY
  VODKA
  GIN
  RUM
  TEQUILA
  BRANDY
  OTHER
  LIQUEUR

  @@schema("public")
}

enum Entity {
  DSIIDC
  DCCWS
  DSCSC
  DTTDC

  @@schema("public")
}

model Vendor {
  id           String                           @id @default(uuid())
  externalId   String                           @unique
  name         String
  address      String
  productTypes ProductType[]
  entity       Entity
  createdAt    DateTime                         @default(now())
  updatedAt    DateTime                         @updatedAt
  products     Product[]
  gmapsPlaceId String?
  location     Unsupported("geography(POINT)")?

  @@index([location], name: "location_idx", type: Gist)
  @@schema("public")
}

model Product {
  id               String          @id @default(uuid())
  externalKey      Int             @unique
  externalId       String
  name             String
  image            String?
  type             ProductType
  category         ProductCategory
  mrp              Int
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  vendors          Vendor[]
  vendorsUpdatedAt DateTime?

  @@schema("public")
}
